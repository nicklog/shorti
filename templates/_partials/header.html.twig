<header class="navbar navbar-expand-md navbar-light d-print-none">
    <div class="container">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <a class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3" href="{{ path('app_index') }}">
            <span class="brand-text font-weight-light">Shorti</span>
        </a>

        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <div class="navbar-nav flex-row order-md-last">
                <div class="nav-item d-none d-md-flex me-3">
                    <div class="btn-list">
                        <a href="https://github.com/nicklog/shorti" class="btn btn-github" target="_blank" rel="noreferrer">
                            <span class="iconify me-1" data-icon="fa-brands:github" data-height="20" data-inline="true"></span>
                            Source code
                        </a>
                        <a href="https://www.buymeacoffee.com/nicklog" class="btn btn-orange" target="_blank" rel="noreferrer">
                            <span class="iconify me-1" data-icon="simple-icons:buymeacoffee" data-height="20" data-inline="true"></span>
                            Buy me a coffee
                        </a>
                    </div>
                </div>

                <div class="nav-item dropdown">
                    <a href="#" class="dropdown-toggle nav-link" data-bs-toggle="dropdown">
                        <span class="iconify me-1" data-icon="fa-solid:user"></span>
                        {{ app.user.username }}
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a href="{{ path('app_profile_index') }}" class="dropdown-item">
                            <span class="iconify me-1" data-icon="fa-solid:user"></span>
                            Profile
                        </a>
                        <a href="{{ path('app_profile_password') }}" class="dropdown-item">
                            <span class="iconify me-1" data-icon="fa-solid:key"></span>
                            Change password
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="{{ path('app_logout') }}" class="dropdown-item">
                            <span class="iconify me-1" data-icon="fa-solid:sign-out-alt"></span>
                            Logout
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</header>

{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    <div class="navbar-expand-md">
        <div class="collapse navbar-collapse" id="navbar-menu">
            <div class="navbar navbar-light">
                <div class="container-xl">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_short_url_index') }}">
                                <span class="iconify me-1" data-icon="fa-solid:link"></span>
                                Short URL's
                            </a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_domain_index') }}">
                                    <span class="iconify me-1" data-icon="fa-solid:cube"></span>
                                    Domains
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_user_index') }}">
                                    <span class="iconify me-1" data-icon="fa-solid:users"></span>
                                    Users
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endif %}