{% extends 'layout.html.twig' %}

{% block pageTitle %}
    Add user
{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <div class="card card-primary card-outline">
        <div class="card-header">
            User
        </div>
        <div class="card-body">
            {{ form_widget(form) }}
        </div>
        <div class="card-footer text-end">
            <div class="d-flex">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="{{ path('app_user_index') }}" class="btn btn-link ms-auto">Cancel</a>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
