{
    "name": "nicklog/shorti",
    "description": "Shorti",
    "license": "GPL-3.0-or-later",
    "type": "project",
    "autoload": {
        "files": [
            "src/Kernel.php"
        ],
        "psr-4": {
            "App\\": "src/",
            "DoctrineMigrations\\": "migrations/"
        }
    },
    "require": {
        "php": "^8.1",
        "ext-json": "*",

        "symfony/flex": "^2.1",

        "symfony/framework-bundle": "^6.0",
        "symfony/twig-bundle": "^6.0",
        "symfony/monolog-bundle": "^3.7",
        "symfony/security-bundle": "^6.0",

        "symfony/dependency-injection": "^6.0",
        "symfony/asset": "^6.0",
        "symfony/console": "^6.0",
        "symfony/dotenv": "^6.0",
        "symfony/filesystem": "^6.0",
        "symfony/finder": "^6.0",
        "symfony/form": "^6.0",
        "symfony/lock": "^6.0",
        "symfony/yaml": "^6.0",
        "symfony/stopwatch": "^6.0",
        "symfony/translation": "^6.0",
        "symfony/translation-contracts": "^3.0",
        "symfony/security-core": "^6.0",
        "symfony/security-http": "^6.0",
        "symfony/routing": "^6.0",
        "symfony/process": "^6.0",
        "symfony/options-resolver": "^6.0",
        "symfony/validator": "^6.0",
        "symfony/http-kernel": "^6.0",
        "symfony/http-foundation": "^6.0",
        "symfony/webpack-encore-bundle": "^1.8",
        "symfony/string": "^6.0",
        "symfony/cache": "^6.0",
        "symfony/property-access": "^6.0",
        "symfony/mime": "^6.0",
        "symfony/runtime": "^6.0",
        "symfony/doctrine-bridge": "^6.0",
        "symfony/event-dispatcher": "^6.0",
        "symfony/password-hasher": "^6.0",

        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/doctrine-bundle": "^2.6",
        "doctrine/orm": "^2.11",
        "doctrine/dbal": "^3.3",
        "doctrine/event-manager": "^1.1",
        "doctrine/migrations": "^3.4",
        "doctrine/persistence": "^2.4",
        "doctrine/collections": "^1.6",

        "psr/log": "^3.0",

        "twig/twig": "^3.3",
        "knplabs/knp-paginator-bundle": "^5.8",
        "knplabs/knp-components": "^3.5",
        "shapecode/doctrine-dbal-datetimeutc": "^3.0",
        "sensio/framework-extra-bundle": "^6.2",
        "twig/string-extra": "^3.3",
        "twig/extra-bundle": "^3.3",
        "nesbot/carbon": "^2.57",
        "myclabs/php-enum": "^1.8",
        "nunomaduro/collision": "^6.1",
        "ircmaxell/random-lib": "^1.2",
        "monolog/monolog": "^2.4",
        "filp/whoops": "^2.14"
    },
    "require-dev": {
        "doctrine/coding-standard": "^9.0",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "~1.5",
        "phpstan/phpstan-deprecation-rules": "~1.0",
        "phpstan/phpstan-phpunit": "~1.0",
        "phpstan/phpstan-strict-rules": "~1.1",
        "phpstan/phpstan-doctrine": "~1.3",
        "phpstan/phpstan-symfony": "~1.1",
        "maglnet/composer-require-checker": "^4.0",
        "icanhazstring/composer-unused": "^0.7",
        "symfony/maker-bundle": "^1.26",
        "symfony/web-profiler-bundle": "^6.0",
        "symfony/debug-bundle": "^6.0",
        "jetbrains/phpstorm-attributes": "^1.0",
        "rector/rector": "^0.12.19"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "scripts": {
        "prepare-test": [
            "php bin/console cache:clear --env=test --no-warmup --ansi",
            "php bin/console cache:warmup --env=test --ansi"
        ],
        "check": [
            "composer check-platform-reqs -n",
            "composer validate --strict -n",
            "@unuse",
            "@cs-check",
            "@phpstan"
        ],
        "crc": "composer-require-checker --config-file=./composer-require-checker.json --ansi",
        "fos-js-dump": "php bin/console fos:js-routing:dump --format=json --target=public/js/fos_js_routes.json",
        "phpstan": "phpstan analyse --ansi",
        "phpstan-update-baseline": "phpstan analyse --ansi --generate-baseline phpstan-baseline.neon",
        "phpunit": "phpunit --colors=always",
        "cs-check": "phpcs -s --filter=GitModified",
        "cs-check-diff": "phpcs -s --filter=src/Infrastructure/PHPCodeSniffer/Filters/GitDiff.php",
        "cs-check-all": "phpcs -s",
        "cs-fix": "phpcbf --filter=GitModified",
        "cs-fix-diff": "phpcbf --filter=./src/Infrastructure/PHPCodeSniffer/Filters/GitDiff.php",
        "cs-fix-all": "phpcbf",
        "lint-twig": "php bin/console lint:twig src templates --show-deprecations --ansi",
        "lint-yaml": "php bin/console lint:yaml config src translations --parse-tags --ansi",
        "lint-container": "php bin/console lint:container --ansi",
        "unuse": "composer unused --excludeDir=vendor --excludeDir=node_modules --excludeDir=var --excludeDir=public/checks --ansi",
        "install-codestandards": "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "allow-plugins": {
            "symfony/flex": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "symfony/runtime": true,
            "icanhazstring/composer-unused": true
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": "true"
        },
        "unused": [
            "sensio/framework-extra-bundle",
            "twig/string-extra",
            "shapecode/doctrine-dbal-datetimeutc"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
